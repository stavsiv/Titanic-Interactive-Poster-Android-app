<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle">
        <item name="layout_constraintHorizontal_bias">0.055</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/gray_light</item>
        <item name="cornerRadius">20dp</item>
        <item name="icon">@drawable/baseline_stories</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">15sp</item>
        <item name="iconTint">#4D4646</item>
        <item name="strokeColor">@color/gray_light</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="TextViewOrder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewOrderLand">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
    <item name="android:buttonTint">@color/black</item>
    <item name="android:textColor">@color/black</item>
    </style>

    <style name="DatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">#CAC5B7</item>
        <item name="colorAccent">#CAC5B7</item>

        <item name="colorPrimaryVariant">#CAC5B7</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">#CAC5B7</item>

        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>